<% layout('layouts/boilerplate')%>


<div class="row">
  <h1 class="text-center text-light">Profile</h1>
  <div class="col-6 offset-3">

    <div class="d-flex bg-dark justify-content-center">
      <h5 class="d-flex justify-content-center text-light"><%= foundUser.username %></h5>
    </div>
      
    <div class="d-flex justify-content-center card-body p-4 text-black bg-dark">
      <div class="mb-5 bg-dark">
        <p class="d-flex justify-content-center lead fw-normal mb-1 bg-dark text-light">Bio</p>
        <p class="d-flex justify-content-center text-light"> <%=foundUser.description%></p>

        <% if(currentUser && foundUser._id.equals(currentUser._id)) { %>
          <a class="d-flex justify-content-center btn btn-light mb-2" href="/users/<%=foundUser._id%>/edit">Edit Profile</a>
    
          <form action="/users/<%=foundUser._id%>?_method=DELETE" method="POST">
            <button type="submit" class="d-flex justify-content-center btn btn-danger mt-2">Delete Profile</button>
          </form>
        <% } %>
    </div>


    </div>
  </div>
</div>